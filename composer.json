{
    "name": "code-wheel/mcp-tool-gateway",
    "description": "MCP Tool Gateway - Dynamic tool discovery and execution via 3 meta-tools",
    "type": "library",
    "license": "MIT",
    "keywords": ["mcp", "model-context-protocol", "tools", "gateway", "discovery"],
    "authors": [
        {
            "name": "Code Wheel",
            "email": "mowens3@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "mcp/sdk": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "CodeWheel\\McpToolGateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeWheel\\McpToolGateway\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
